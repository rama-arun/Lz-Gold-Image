{
  "variables": {
    "vpc": "{{env `BUILD_VPC_ID`}}",
    "subnet": "{{env `BUILD_SUBNET_ID`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "ami_name": "Prod-CIS-Latest-UBUNTU-{{isotime \"02-Jan-06 03_04_05\"}}"
  },
  "builders": [{
    "name": "AWS AMI Builder - CIS",
    "type": "amazon-ebs",
    "region": "{{user `aws_region`}}",
    "source_ami_filter": {
        "filters": {
            "virtualization-type": "hvm",
            "name": "CIS Ubuntu Linux 14.04 LTS Benchmark v2.0.0*",
            "root-device-type": "ebs"
        },
        "owners": ["679593333241"],
        "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `ami_name` | clean_ami_name}}",
    "tags": {
      "Name": "{{user `ami_name`}}"
    },
    "run_tags": { 
      "Name": "{{user `ami_name`}}"
    },
    "run_volume_tags": {
      "Name": "{{user `ami_name`}}"
    },
    "snapshot_tags": {
      "Name": "{{user `ami_name`}}"
    },
    "ami_description": "CIS Ubuntu with Cloudwatch Logs agent",
    "associate_public_ip_address": "true",
    "vpc_id": "{{user `vpc`}}",
    "subnet_id": "{{user `subnet`}}"
  }],
  "provisioners": [
    {
        "type": "shell",
        "inline": [
            "sudo apt update -y"
        ]
    },
    {
        "type": "shell",
        "inline": [
            "sudo apt install software-properties-common -y"
        ]
    },
    {
        "type": "shell",
        "inline": [
            "sudo apt-add-repository ppa:ansible/ansible -y"
        ]
    },
    {
        "type": "shell",
        "inline": [
            "sudo apt update -y"
        ]
    },
    {
        "type": "shell",
        "inline": [
            "sudo apt install ansible -y"
        ]
    },
    {
        "type": "ansible-local",
        "playbook_file": "ansible/playbook_ubuntu.yaml",
        "role_paths": [
            "ansible/roles/ubuntu"
        ],
        "playbook_dir": "ansible"
    },
    {
      "type": "shell",
      "inline": [
        "rm .ssh/authorized_keys ; sudo rm /root/.ssh/authorized_keys"
      ]
    }
  ]
}
